<div class="content">
  <div class="cards">
    <% @bookings.each do |booking| %>
      <div class="card-trip">
        <% start_date = booking.start_date %>
        <% return_date = booking.return_date %>
        <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" /> %>
        <%= cl_image_tag(booking.vehicle.photo.key) %>
        <%# <%= cl_image_tag(booking.photo.key,
              width: 400, height: 300, crop: :fill) %>
        <div class="card-trip-infos">
          <div>
            <h2><%= booking.vehicle %></h2>
            <p>Starts on <%= start_date %></p>
            <p>Return on <%= return_date %></p>
            <p>Status : <%= booking.status %></p>
          </div>
          <h2 class="card-trip-pricing">Â¥ <%= booking.vehicle.price * (return_date - start_date).to_i %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
