            <div>
              <h2><%= vehicle.brand %></h2>
              <p><%= vehicle.model %></p>
            </div>
            <h3 class="card-trip-pricing"><%= number_to_currency(vehicle.price, {unit: 'Â¥', precision: 0}) %><span class="pricing-day"> / day</span></h3>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
