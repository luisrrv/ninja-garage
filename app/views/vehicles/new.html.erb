<h1 class="slogan p-3">Rent out your vehicle!</h1>
<div class="container p-3">
  <div class="row">
    <div class="col-12 col-sm-6 offset-sm-3">
      <%= simple_form_for(@vehicle) do |f| %>
        <%= f.input :brand %>
        <%= f.input :model %>
        <%= f.input :category, collection: Vehicle::CATEGORIES, include_blank: false %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :location %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: 'btn btn-danger mt-2' %>
      <% end %>
    </div>
  </div>
</div>
