<div>
  <% if booking.status == "pending" %>
    <div class="container px-0">
      <%= simple_form_for booking, remote: true do |f| %>
        <%= f.input :status, as: :hidden, input_html:{value:"accepted"} %>
        <%= f.submit "accept", class: 'btn btn-primary btn-lg w-100' %>
      <% end %>
    </div>
    <div class="container px-0">
      <%= simple_form_for booking, remote: true do |f| %>
        <%= f.input :status, as: :hidden, input_html:{value:"rejected"} %>
        <%= f.submit "decline", class: 'btn btn-danger btn-lg w-100' %>
      <% end %>
    </div>
  <% elsif booking.status == "accepted" %>
    <h2 style="color:green">Accepted</h2>
  <% else %>
    <h2 style="color:red">Rejected</h2>
  <% end %>
</div>
